    jcr:primaryType="cq:Dialog"
    title="mbox component"
    height="640"
    width="480"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <mboxName
            jcr:primaryType="cq:Widget"
            name="./mboxName"
            fieldLabel="mbox Name"
            fieldDescription="mbox名を入力してください"
